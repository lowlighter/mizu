{
  "name": "Deno",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "customizations": {
    "vscode": {
      "settings": {
        "editor.defaultFormatter": "denoland.vscode-deno",
        "deno.lint": true,
        "deno.enable": true
      },
      "extensions": [
        "ms-azuretools.vscode-docker",
        "denoland.vscode-deno",
        "GitHub.vscode-github-actions",
        "GitHub.copilot",
        "GitHub.copilot-chat"
      ]
    },
    "remoteUser": "vscode"
  }
}
